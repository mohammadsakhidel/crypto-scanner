<Application x:Class="CryptoScanner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CryptoScanner"
             xmlns:c="clr-namespace:CryptoScanner.Converters">
    <Application.Resources>
        <ResourceDictionary>

            <c:BoolToVisibilityConverter x:Key="cBoolVis" />
            <c:NotConverter x:Key="cNot" />
            <c:NullMessageConverter x:Key="cNullMessage" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/_Templates.xaml" />
                <ResourceDictionary Source="Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
